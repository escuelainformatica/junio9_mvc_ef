@{
}
<h1>hola mundo</h1>

<style type="text/css">
.tg  {border-collapse:collapse;border-spacing:0;}
.tg td{border-color:black;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:14px;
  overflow:hidden;padding:10px 5px;word-break:normal;}
.tg th{border-color:black;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:14px;
  font-weight:normal;overflow:hidden;padding:10px 5px;word-break:normal;}
.tg .tg-0lax{text-align:left;vertical-align:top}
</style>
<table class="tg">
<thead>
  <tr>
    <th class="tg-0lax">Id</th>
    <th class="tg-0lax">Nombre</th>
    <th class="tg-0lax">Precio Unitario</th>
    <th class="tg-0lax">Cantidad</th>
    <th class="tg-0lax">Id Categoria</th>
  </tr>
</thead>
<tbody>
@foreach(Producto producto in ViewBag.productos) {
  <tr>
    <td class="tg-0lax">@producto.IdProducto</td>
    <td class="tg-0lax">@producto.Nombre</td>
    <td class="tg-0lax">@producto.PrecioUnitario</td>
    <td class="tg-0lax">@producto.Cantidad</td>
    <td class="tg-0lax">@producto.IdCategoriaNavigation.Nombre</td>
  </tr>
}
</tbody>
</table>
